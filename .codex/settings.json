{
  "deniedTools": [
    "mcp__task-master__initialize_project"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/load-behavioral-system.sh"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/load-behavioral-system.sh"
          }
        ]
      },
      {
        "matcher": "clear",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/load-behavioral-system.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/block-destructive-commands.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/directive-enforcer.sh"
          },
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/test-driven-handoff.sh"
          },
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "mock-.*",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/mock-deliverable-generator.sh"
          },
          {
            "type": "command",
            "command": "./.codex/hooks/test-driven-handoff.sh"
          },
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      },
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "./.codex/hooks/test-driven-handoff.sh"
          },
          {
            "type": "command",
            "command": "./.codex/hooks/collective-metrics.sh"
          }
        ]
      }
    ]
  }
}