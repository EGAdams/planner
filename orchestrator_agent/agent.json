{
    "name": "orchestrator-agent",
    "version": "1.0.0",
    "description": "Hub-and-spoke coordinator for the Codex/Claude-inspired collective. Routes work, curates A2A registry metadata, and enforces TDD-first orchestration.",
    "capabilities": [
        {
            "name": "route_request",
            "description": "Analyze a natural language request and route it to the best agent using Claude-style routing heuristics.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "request": {
                        "type": "string"
                    }
                }
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "target_agent": {
                        "type": "string"
                    },
                    "task_id": {
                        "type": "string"
                    }
                }
            }
        },
        {
            "name": "discover_agents",
            "description": "Scan the workspace for agent cards (agent.json) and surface A2A-ready metadata.",
            "input_schema": {},
            "output_schema": {
                "type": "array",
                "items": {
                    "type": "object"
                }
            }
        },
        {
            "name": "manage_a2a_collective",
            "description": "Maintain the Letta-backed agent registry, enforce per-agent memory isolation, and drive new capabilities via TDD.",
            "input_schema": {
                "type": "object",
                "properties": {
                    "goal": {
                        "type": "string"
                    },
                    "artifacts": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "goal"
                ]
            },
            "output_schema": {
                "type": "object",
                "properties": {
                    "registry_state": {
                        "type": "object"
                    },
                    "tdd_status": {
                        "type": "string"
                    }
                }
            }
        }
    ],
    "topics": [
        "orchestrator",
        "general",
        "a2a",
        "collective"
    ],
    "memory_access": "read-write"
}
