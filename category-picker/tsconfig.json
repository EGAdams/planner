{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "public/js",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/**/*"
  ]
}